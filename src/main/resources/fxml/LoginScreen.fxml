<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ui.LoginController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Label styleClass="header" text="Hotel Reservation System Login" />
    <Label text="Email:" />
    <TextField fx:id="emailField" promptText="user@example.com" />
    <Label text="Password:" />
    <PasswordField fx:id="passwordField" promptText="password" />
    <Button fx:id="loginButton" defaultButton="true" onAction="#handleLogin" text="Login" />
    <Label fx:id="errorLabel" styleClass="error-label" />
    <Hyperlink onAction="#handleGoToRegister" text="Don't have an account? Register here" />
</VBox>
