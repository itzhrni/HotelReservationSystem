<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ui.MyBookingsController"
      alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10" stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label styleClass="header" text="My Bookings" />
    <TableView fx:id="bookingsTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="roomNumberCol" prefWidth="120.0" text="Room Number" />
            <TableColumn fx:id="roomTypeCol" prefWidth="150.0" text="Room Type" />
            <TableColumn fx:id="checkInCol" prefWidth="150.0" text="Check-in Date" />
            <TableColumn fx:id="checkOutCol" prefWidth="150.0" text="Check-out Date" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    <HBox alignment="CENTER_RIGHT" prefHeight="40.0" spacing="10">
        <Button onAction="#handleCancelBooking" text="Cancel Selected Booking" />
    </HBox>
</VBox>